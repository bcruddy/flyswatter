{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-debugger": 2,
        "indent": ["error", 4 ],
        "space-before-function-paren": ["error", "always"],
        "semi": ["error", "always"],
        "object-curly-spacing": ["error", "never"],
        "array-bracket-spacing": ["error", "never"],
        "computed-property-spacing": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "eol-last": "error",
        "no-trailing-spaces": "error"
    }
}